# File Quarantine Script - Configuration File
# Copy this file to .env and customize for your environment

# ============================================================================
# DIRECTORIES
# ============================================================================

# Directory to scan (multiple directories separated by colons)
# Example: "/var/log:/home:/opt"
SCAN_DIRS="/path/to/scan/directory:/path/to/scan/directory2"

# Root quarantine directory (files will preserve structure under this)
QUARANTINE_ROOT="/var/quarantine"

# ============================================================================
# FILE EXTENSIONS & RETENTION
# ============================================================================

# File extensions to quarantine (separated by colons)
# Example: "sql:bak:log:tmp:old"
FILE_EXTENSIONS="sql:bak:log:tmp:old"

# Days to keep quarantined files before deletion
RETENTION_DAYS=60

# Minimum file age (in minutes) before quarantine
# This prevents quarantining actively used files
MIN_FILE_AGE_MINUTES=60

# ============================================================================
# LOG FILE TRUNCATION
# ============================================================================

# Enable log file truncation (true/false)
TRUNCATE_LOGS=true

# Truncate size for log files (e.g., "5MB", "100KB", "1GB", "500B")
TRUNCATE_SIZE="5MB"

# ============================================================================
# EXCLUDE PATTERNS
# ============================================================================

# Exclude patterns (directories or files to skip, separated by colons)
# Uses find's -path pattern matching
# Example: "*/proc/*:*/sys/*:*/dev/*:*/tmp/*:*/.git/*:*/node_modules/*"
EXCLUDE_PATTERNS="*/proc/*:*/sys/*:*/dev/*:*/tmp/*:*/.git/*:*/node_modules/*:*/wp-content/*"

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Enable email notifications (true/false)
ENABLE_EMAIL=false

# Recipient email address
EMAIL_TO="admin@example.com"

# Sender email address
EMAIL_FROM="quarantine@$(hostname)"

# Email subject (can include variables)
EMAIL_SUBJECT="File Quarantine Report - $(date +%Y-%m-%d)"

# ============================================================================
# SMTP CONFIGURATION (if using external SMTP instead of local mail)
# ============================================================================

# Leave empty to use local mail/sendmail
# Example: "smtp.gmail.com:587"
SMTP_SERVER=""

# SMTP username (leave empty if not needed)
SMTP_USER=""

# SMTP password (leave empty if not needed)
SMTP_PASS=""

# Use TLS for SMTP (true/false)
SMTP_USE_TLS="true"
